<% layout("/layouts/boilerplate.ejs") %>
<body>
    <div class="row">
        <div class="col-8 offset-3">

        
    <h2><%=itemInfo.title%></h2>
    </div>
    <div class="card col-6 offset-3  show-card listing-card">
        <img src="<%=itemInfo.image%>" class="card-img-top show-img" alt="...">
        <div class="card-body">
          <p class="card-text">
            <!-- <b><%=itemInfo.title%></b><br> -->
            <%=itemInfo.description%><br>
            &#8377;<%=itemInfo.price.toLocaleString("en-IN")%><br>
            <%=itemInfo.location%><br>
            <%=itemInfo.history%>
        </p>
        </div>
      </div>
    <div class="btns">
        <a href="/listings/<%= itemInfo._id %>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>
        <form method="post"  action="/listings/<%=itemInfo._id%>?_method=DELETE">
            <button class="btn btn-dark offset-5">Delete</button>
        </form>
       
    </div>
    <div class="col-8 offset-3">
        <hr>
        <h4>Leave a Review</h4>
        <form action="/listings/<%= itemInfo._id%>/reviews" method="POST" class="needs-validation" novalidate>
            <div class="mb-3 mt-3">
                <label for="rating" class="form-label">Rating</label>
                <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range">
            </div>
            <div class="mb-3 mt-3">
                <label for="comment" class="form-label">Comments</label>
                <textarea name="review[comment]" id="comment" cols="30" rows="10" class="form-control" required></textarea>
                <div class="invalid-feedback">Please add some comments for review.</div>
            </div>
            <button class="btn btn-outline-dark">Submit</button>
        </form>
        <hr>
        <p><b>All Reviews</b></p>
        <div class="row">

        
        <%for(let review of itemInfo.reviews){%>
            <div class="card col-5 ms-3 mb-3">
                <div class="card-body">
                    <h5 class="card-title">Jany Doe</h5>
                    <p class="card-text"><%=review.comment%></p>
                    <p class="card-text">(<%=review.rating%> Stars)</p>
                </div>
                <form action="/listings/<%=itemInfo._id%>/reviews/<%=review._id%>?_method=DELETE" class="mb-3" method="POST">
                    <button class="btn btn-sm btn-dark">Delete</button>
                </form>
            </div>
        <%}%>
    </div>
    </div>
    
</div>
<br> 
</body>
